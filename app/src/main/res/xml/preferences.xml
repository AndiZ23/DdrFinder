<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/settings_category_basic">
        <ListPreference
            android:defaultValue="@string/settings_src_default"
            android:key="api_src"
            android:title="@string/settings_src"
            android:entries="@array/settings_src_entries"
            android:entryValues="@array/settings_src_entryValues"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/settings_category_advanced">
        <SwitchPreference
            android:defaultValue="true"
            android:key="autoload"
            android:title="@string/settings_autoload"
            android:summary="@string/settings_autoload_desc"/>
        <EditTextPreference
            android:defaultValue="all"
            android:key="api_src_custom"
            android:title="@string/settings_api_src"/>
        <EditTextPreference
            android:defaultValue="@string/settings_api_url_default"
            android:key="api_endpoint"
            android:title="@string/settings_api_endpoint"/>
        <ListPreference
            android:defaultValue="@string/settings_api_version_default"
            android:key="api_version"
            android:title="@string/settings_api_version"
            android:entries="@array/settings_api_version_entries"
            android:entryValues="@array/settings_api_version_entryValues"/>
    </PreferenceCategory>
</PreferenceScreen>