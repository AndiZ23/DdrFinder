<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

        <!-- Base Theme: inspired by DDR (2013) White Cabinet color scheme; updated to use Material Palette -->
        <item name="android:colorPrimary">@color/material_blue_700</item>
        <item name="android:colorPrimaryDark">@color/material_blue_700_dark</item>

        <item name="android:colorAccent">@color/material_purple_500</item>
        <item name="mColorAccent">?android:colorAccent</item>
        <item name="android:actionModeBackground">?android:colorAccent</item>
        <item name="actionModeStatusBarColor">@color/material_purple_500_dark</item>

        <item name="pinColor">@color/material_purple_500_light</item>
        <item name="pinColorHasDDR">@color/material_yellow_600</item>
    </style>
</resources>